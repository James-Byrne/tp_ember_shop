<div id="functional-response-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{functionalResponse.checkoutmessage}}</h4>
      </div>

      <div class="modal-body">
        {{functionalResponse.description}}
      </div>

      <div class="modal-footer">
        {{#each-in functionalResponse.checkoutOptions as |option value|}}
          <button type="button" {{action value.[0] value.[1]}} class="btn btn-default dismiss {{option}}" data-dismiss="modal">
            {{option}}
          </button>
        {{/each-in}}
      </div>

    </div>
  </div>
</div>
