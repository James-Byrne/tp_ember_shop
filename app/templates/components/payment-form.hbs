    <div class="form-group">
      <label for="expiryMonth" class="control-label col-sm-4">Expiry Month/Year</label>
      <div class="col-sm-3">
        <input id="expiryMonth" class="form-control" name="expiryMonth" placeholder="MM" value="06" required>
      </div>
      <div class="col-sm-3">
        <input id="expiryYear" class="form-control" name="expiryYear" placeholder="YYYY" value="2021" required>
      </div>
    </div>

    <div class="form-group">
      <label for="cvv" class="control-label col-sm-4">CVV</label>
      <div class="col-sm-3">
        <input id="cvv" class="form-control" name="cvv" placeholder="000" value="222" required>
      </div>
    </div>

    <div class="form-group">
      <label for="total" class="control-label col-sm-4">Total</label>
      <div class="col-sm-3">
        <input id="total" step="0.01" class="form-control" name="total" placeholder="{{total}}" value="{{total}}" type="number" required>
      </div>

      <div id="dropdown" class="dropdown currency-dropdown col-sm-3">
        <button class="btn btn-block btn-secondary dropdown-toggle dropdown-id" type="button" id="currencyDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" value="EUR">EUR <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a id="EUR" href="#">EUR</a></li>
          <li><a id="GBP" href="#">GBP</a></li>
          <li><a id="USD" href="#">USD</a></li>
          <li><a id="RUB" href="#">RUB</a></li>
        </ul>
      </div>
      <span id="total-info" class="glyphicon glyphicon-info-sign realex-info" aria-hidden="true" data-toggle="tooltip" data-placement="right" data-title="Enter any amount in this field. Realex’s test system ignores the test amount."></span>
    </div>

    <div class="form-group">
      <label for="total" class="control-label col-sm-4">Converted Total</label>
      <div class="col-sm-6">
        <label id="convertedTotal" class="control-label"></label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4"></div>
      <div class="col-sm-6">
        <button id="checkout" type="Submit" class="btn btn-primary btn-block">Checkout</button>
      </div>
    </div>
  </form>
