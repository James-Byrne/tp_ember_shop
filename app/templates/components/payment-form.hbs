    <div class="form-group">
      <label for="card-holder" class="control-label col-sm-4">Last Name</label>
      <div class="col-sm-6">
        <input id="lastname" class="form-control" name="lastname" placeholder="McBuyer" type="text" id="lastname" value="McBuyer" required>
      </div>
    </div>

