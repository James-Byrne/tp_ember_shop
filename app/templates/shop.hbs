<div class="container">
  <div class="row">
    <div class="col-xs-9">
      {{#each products as |product index|}}
        {{product-item product=product}}
      {{/each}}
    </div>

    <div class="col-xs-3">
      {{show-cart}}
    </div>
  </div>
</div>

<div id="payment-section" class="payment-section">
  <div class="container">

    <div class="col-xs-8">
      {{credit-card-form
        name=name
        number=number
        month=month
        year=year
        cvc=cvc
        total=total
        currency=currency
        submitPayment=(action "submitPayment")
        add_card=add_card}}
      </div>

      <div class="col-xs-4">
        {{payment-responses}}
      </div>

  </div>
</div>

{{outlet}}
